<% include ./partials/header.ejs%>
    <div class="profile w-full min-h-screen bg-zinc-700 text-white pt-1">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        
        <div class="profdets flex flex-col items-center mt-20">
            <div class="relative ">
                <span id="uploadbtn" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-100" >
                    <button>

                        <i class=" text-zinc-800 ri-pencil-line"></i>
                    </button>
                </span>
                <div class="w-32 h-32 bg-zinc-700 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover " src="/images/uploads/<%= user.profileImage%>" alt="">   
                    <!-- when you pass img here you are directely making the user to see profile so make it to see logged in user profile  -->
                </div>

            </div>
            <h1 class="text-2xl font-semibold mt-4"><%=user.name%></h1>
            <h3 class="text-md">@<%=user.username%></h3>
            <a href="/edit" class="mt-3 px-10 py-1 bg-zinc-900 rounded-full text-xs font-semibold">Edit</a>
            <a href="/add" class="mt-2 px-5 text-xs font-semibold py-1 rounded-lg bg-red-400" >Add new post</a href="">
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10 ml-20">
            <div class="card" >
                <div class=" w-52 h-40 bg-red-400 rounded-md overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.posts[0]?.image%>" alt="img">
                </div>
                <a href="/show/posts" class="text-xl font-semibold mt-2">Your pins</a href="/show/posts">
                <h5 class="text-sm font-semibold opacity-50"><%=user.posts.length%> No. of pins</h5>
            </div>

        </div>

    </div>

    <script>
        document.querySelector("#uploadbtn").addEventListener("click",function(){
            document.querySelector("#uploadform input").click()
        })

        document.querySelector("#uploadform input").addEventListener("change",function(){
            document.querySelector("#uploadform").submit()
        })

    </script>



