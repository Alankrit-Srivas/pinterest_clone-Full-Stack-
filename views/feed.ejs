<% include ./partials/header.ejs%>

<div class="w-full min-h-screen bg-zinc-700 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <%allposts.forEach(function(elem){%>
            <div class=" card w-32">
              <div class=" w-full h-40 bg-sky-200 rounded-md overflow-hidden ">
                    <img class=" h-full object-cover" src="/images/uploads/<%=elem.image%>" alt="">
                </div>
                <h5 class="mt-2 text-sm"><%=elem.title %></h5>
                <a class="text-sm opacity-50 " href="#">@<%= elem.user.name%></a>
                <!-- <a class="text-sm opacity-50 " >@</a> -->

            </div>
            <% })%>



    </div>
</div>
 
<% include ./partials/footer.ejs%>
