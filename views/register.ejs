<% include ./partials/header.ejs%>

  <div class="w-full h-screen bg-cover bg-center bg-[url('/images/bg2.avif')] flex items-center justify-center">
    <div class="w-[30vw] bg-white px-20 py-10 rounded-[30px]">
      <img class="w-20 mb-4 h-20 mx-auto rounded-full" src="/images/logo.png" alt="logo">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 capitalize leading-none">Create New account</h1>
      <form action="/register" method="post">
        <label for="Email">Email:</label>
        <input class=" border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email"
          placeholder="Email">
          <label for="username">Name:</label>
        <input class=" border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname"
          placeholder="Full Name">
        <label for="Email">Contact:</label>
        <input class=" border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact"
          placeholder="Contact">
        <label for="username">Username:</label>
        <input class=" border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
          placeholder="username">
        <label for="password">Password:</label>
        <input class=" border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password"
          placeholder="password">
        
        <input class=" border-2  block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit"
          value="Create New Account">

        <p class="text-xs font-semibold text-zinc-500 mt-10 w-2/3 mx-auto text-center">By continuing, you agree to Pinterests Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.
        </p>

      </form>

      <a class="inline-block mt-5 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already Have an Account? Login</a>



    </div>
  </div>

  <% include ./partials/footer.ejs%>